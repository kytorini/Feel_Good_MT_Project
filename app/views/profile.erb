<section id="intro" class="main style3 dark fullscreen">

  <% if current_user %>
    <div class="profile">
      <div class="text-center">
        <p style="font-size:60px;"><strong> This is your profile,<%= current_user.username %> </strong></p>
        <!-- <p> this is a piece of advice blah </p> -->
      </div>



<br>
<br>
      <div class="icon-container">
        <div class="col-lg-4" id="stats">
          <p><strong>You have bookmarked <b class="empa"><%= current_user.bookmarks.count %> </b>advices.</strong><p>
          <p><strong>You've given <b class="empa"><%= current_user.advices.count %></b> advices.</strong></p>  <!-- Fix this!!! user case, 0 times, 1 time, 2 times  -->
        </div>
        <div class="col-lg-4"> MAIN RANK GOINGS HERE</div>
        <div class="col-lg-4"><p><strong>Your advices have been bookmarked <b class="empa"> <%= Advice.joins(:bookmarks).where(user_id: current_user.id).count %></b> times.</strong></div>
        <!-- <div class="col-lg-3">this is a stat</div> -->
      </div>

<br>
<br>
<br>
<br>
<br>




    <div class="col-lg-6" id="own_post">
      <ol>
       <h3> <strong>Your Posted advice</strong> </h3>
       <br>
        <ol>
          <% @advices.map do |advice| %>
          <li class="advices"><%= advice.content %> Bookmarked: <%= Advice.joins(:bookmarks).where(id: advice.id).count %> times.</li>
          <% end %>
        </ol>
      </ol>
    </p>
    </div>


  <div class="col-lg-6" id="bookmarked">
  <h3><strong>Your Bookmarked advice </strong></h3>
  <br>
  <p>
    <ol>
      <% @bookmarks.map do |bookmark| %>
      <li class="advices">
      <span><%= "#{bookmark.advice.content}" %></span>
      <form action="/delete" method="POST">
       <input type="hidden" name="bookmark_id" value="<%= bookmark.id %>">
       <input class="round_button" type="submit" value="X"  >

     </form></li>
     <% end %>
   </ol>
 </p>
 </div>
 
</div>

<% else %>
<% redirect '/' %>
<% end %>
</section>
