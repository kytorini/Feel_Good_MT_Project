<% if current_user %>
  <p>
    <ol>
      <p> You've posted <%= current_user.advices.count %> times. <br> You've bookmarked <%= current_user.bookmarks.count %> times.
      </p>
      <p><strong> Your bookmarked advice: </strong></p>
        <% current_user.bookmarks.map do |bookmark| bookmark %>
        <li>
       <%= "#{bookmark.advice.content}" %><form action="/delete" method="POST">
       <input type="hidden" name="bookmark_id" value="<%= bookmark.id %>">
       <button class="btn btn-default" type="submit"><span class="glyphicon glyphicon-music"></span>        Delete!</button>
     </form></li>
     <% end %>
   </ol>
 </p>

<p> Your posted advice: </p>

<p>

<ol>
<% current_user.advices.map do |advice| %>
 <li><%= "#{advice.content}" %></li>
<% end %>
</ol>
</p>
<% end %>

