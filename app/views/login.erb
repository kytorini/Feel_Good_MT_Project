
<section id="intro" class="main style2 dark fullscreen">
  <% if session[:user_id] %>
    <%= current_user.username %>
  <% else %>
  <% if @message %> 
    <p class="sys_to_user_message"><%= @message %></p>
  <% end %>
  <form class="user_forms" method="POST" action="/login">
    <input type="text" name="username" class="individual-form-control" placeholder="Enter Username">
    <input type="password" name="password" class="individual-form-control" placeholder="Enter Password">
    <button type="submit" class="btn">Log In!</button>
  </form>
  <% end %>
</section>


