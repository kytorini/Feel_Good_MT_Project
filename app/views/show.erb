<section id="intro" class="main style3 dark fullscreen">

<% if current_user %>

<p> Your AMAZING advice: </p>
<p><%= @advice.content %></p>
  <form action="/bookmark" method="POST">
    <input type="hidden" name="advice_id" value="<%= @advice.id %>">
      <button class="btn btn-default" type="submit"><span class="glyphicon glyphicon-music"></span>Bookmark!</button>
  </form>
  <form action="/flag" method="POST">
  <input type="hidden" name="advice_id" value="<%= @advice.id %>">
      <button class="btn btn-default" type="submit"><span class="glyphicon glyphicon-music"></span>Flag!</button>
  </form>
  <% else %>
<% redirect '/' %>
</section>
<% end %>
